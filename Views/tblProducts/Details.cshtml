@model Joole.Models.tblProduct

@{
    ViewBag.Title = "Details";
}


<link rel="stylesheet" href="css/iconfont.css">
<link rel="stylesheet" href="css/style.css">
<style>
        html, body {
            margin: 0;
            padding: 0
        }

        .description {
            position: absolute;
            left: 0;
            width: 50%;
            top: 100px;
        }

        .type {
            position: absolute;
            left: 0;
            width: 50%;
            top: 250px
        }

        .technicalspecifications {
            position: absolute;
            right: 0;
            width: 50%;
            top: 100px;
        }

        table {
            margin: 100px;
            /*   border: 15px ; */
            /* padding: 50px; */
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

            td:nth-child(odd) {
                width: 200px;
                background-color: #dddddd;
            }


        .header {
            width: 100%;
            margin: 0;
            height: 126px;
            background: linear-gradient(rgb(20, 107, 154), rgb(241, 246, 247))
        }

        .header2 {
            width: 100%;
            margin: 0;
            height: 126px;
            background: linear-gradient(grey)
        }

        /* .wrap{
        width: 1190px;
        margin: 0 auto;

    } */


        .header-box {
            position: relative;
            height: 140px;
        }

        .logo-image {
            position: absolute;
            left: 0;
            top: 10px;
            width: 210px;
            height: 120px;
            margin-left: 20px;
        }

        .search {
            width: 100%;
            height: 60px;
        }

        .search-m {
            position: relative;
            width: 100%;
            height: 60px;
        }

        .search-logo {
            display: none;
            position: absolute;
            top: 4px;
            left: 0;
            width: 125px;
            height: 40px;
        }

        .form {
            position: absolute;
            left: 500px;
            top: 30px;
            width: 1000px;
            height: 32px;
            border: none;
            display: flex;
            flex-direction: row;
        }


        .keyword {
            /* top: 0;
        position: absolute;
        left: 0; */
            width: 375px;
            height: 35px;
            padding: 2px 0px 2px 0px;
            border: 1px solid transparent;
            line-height: 26px;
            font-size: 15px;
            color: #333;
            outline: none;
            border: 2px solid rgb(15, 104, 152);
            border-radius: 5px;
            box-shadow: 1px 2px 1px rgb(15 104 152/20%);
        }

        #icon {
            margin-left: 10px;
            width: 45px;
            height: 43px;
            line-height: 32px;
            border: none;
            background-color: rgb(27, 111, 171);
            font-size: 20px;
            font-weight: 700;
            color: #fff;
            display: inline;
            border-radius: 5px;
            border: 2px solid rgb(15, 104, 152);
        }


        .container {
            display: flex;
            flex-direction: row;
        }

        #user {
            position: relative;
            margin-top: -20px;
            background-color: rgb(117, 117, 117);
            border-radius: 50%;
            width: 100px;
            height: 100px;
            margin-left: 240px;
            justify-content: center;
            align-items: center;
            text-align: center;
            display: flex;
        }

        .search-helper {
            position: absolute;
            top: 35px;
            width: 375px;
            /* height: 200px; */
            background-color: skyblue;
            border: 1px solid #ccc;
            overflow: hidden;
            background-color: #fff;
            box-shadow: 1px 2px 1px rgb(0 0 0 / 20%);
            cursor: pointer;
            display: none;
        }

        

</style>

<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.Product_ID }) |*@
    @Html.ActionLink("Product Summary", "Index")&nbsp
    @Html.ActionLink("Product Details", "Index")&nbsp
    @Html.ActionLink("Product Document", "Index")&nbsp
    @Html.ActionLink("Contact", "Index")
</p>

<h3 style="color:royalblue; text-align:left">Product Summary</h3>
<table class="description">
    <tr>
        <th colspan="2">Description</th>
    </tr>
    <tr>
        <td>Manufacture</td>
        <td>@Html.DisplayFor(model => model.Product_Name)</td>
    </tr>
    <tr>
        <td>Seris</td>
        <td>@Html.DisplayFor(model => model.Series)</td>
    </tr>
    <tr>
        <td>Model</td>
        <td>@Html.DisplayFor(model => model.Model)</td>
    </tr>
</table>
<table class="type">
    <tr>
        <th colspan="2">Type</th>
    </tr>
    <tr>
        <td>Use Type</td>
        <td>@Html.DisplayFor(model => model.Type)</td>
    </tr>
    <tr>
        <td>Application</td>
        <td>@Html.DisplayFor(model => model.Application)</td>
    </tr>
    <tr>
        <td>Mounting Location</td>
        <td>@Html.DisplayFor(model => model.Mounting_Location)</td>
    </tr>
    <tr>
        <td>Accessories</td>
        <td>@Html.DisplayFor(model => model.Accessories)</td>
    </tr>
    <tr>
        <td>Model Year</td>
        <td>@Html.DisplayFor(model => model.ModeL_Year)</td>
    </tr>
</table>
<table class="technicalspecifications">
    <tr>
        <th colspan="5">Technical Specifications</th>
    </tr>
    <tr>
        <td>Air Flow (CFM)</td>
        <td colspan="4">@Html.DisplayFor(model => model.Air_Flow)</td>
    </tr>
    <tr>
        <td>Power (W)</td>
        <td>Min</td>
        <td>@Html.DisplayFor(model => model.Power_Min)</td>
        <td>Max</td>
        <td>@Html.DisplayFor(model => model.Power_Max)</td>
    </tr>
    <tr>
        <td>Operating Voltage (VAC)</td>
        <td>Min</td>
        <td>@Html.DisplayFor(model => model.Operating_Voltage_Min)</td>
        <td>Max</td>
        <td>@Html.DisplayFor(model => model.Power_Max)</td>
    </tr>
    <tr>
        <td>Fan Speed (RPM)</td>
        <td>Min</td>
        <td>@Html.DisplayFor(model => model.Fan_Speed_Min)</td>
        <td>Max</td>
        <td>@Html.DisplayFor(model => model.Fan_Speed_Max)</td>

    </tr>
    <tr>
        <td>Number of fan speeds</td>
        <td colspan="4">@Html.DisplayFor(model => model.Number_Of_Fan_Speed)</td>

    </tr>
    <tr>
        <td>Sound at max speed (dBA)</td>
        <td colspan="4">@Html.DisplayFor(model => model.Sound_At_Max_Speed)</td>

    </tr>
    <tr>
        <td>Fan sweep diameter (in)</td>
        <td colspan="4">@Html.DisplayFor(model => model.Fan_Sweep_Diameter)</td>
    </tr>
    <tr>
        <td>Height (in)</td>
        <td>Min</td>
        <td>@Html.DisplayFor(model => model.Height_Min)</td>
        <td>Max</td>
        <td>@Html.DisplayFor(model => model.Height_Max)</td>
    </tr>
    <tr>
        <td>Weight (lbs)</td>
        <td colspan="4">@Html.DisplayFor(model => model.Weight)</td>
    </tr>
</table>


