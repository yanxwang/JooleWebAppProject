                                <input type="number" min="0" max="10000" value="7500" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="MaxPower">
                    <img src="~/images/updown4.png" class="updown">&nbsp;&nbsp; Max Power(W)
                    <div class="whole_container">
                        <div class="container">
                            <div class="min-value numberVal2">
                                <input type="number" min="0" max="25" value="7" disabled>
                            </div>
                            &nbsp;
                            <div class="range-slider2">
                                <div class="progress"></div>
                                <input type="range" class="range-min" min="0" max="25" value="7">
                                <input type="range" class="range-max" min="0" max="25" value="20">
                            </div>
                            &nbsp;
                            <div class="max-value numberVal2">
                                <input type="number" min="0" max="25" value="20" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Soundspeed">
                    <img src="~/images/updown4.png" class="updown">&nbsp;&nbsp;Sound at max speed(dBA)
                    <div class="whole_container">
                        <div class="container">
                            <div class="min-value numberVal3">
                                <input type="number" min="0" max="50" value="12" disabled>
                            </div>
                            &nbsp;
                            <div class="range-slider3">
                                <div class="progress"></div>
                                <input type="range" class="range-min" min="0" max="50" value="12">
                                <input type="range" class="range-max" min="0" max="50" value="40">
                            </div>
                            &nbsp;
                            <div class="max-value numberVal3">
                                <input type="number" min="0" max="50" value="40" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Fansweep">
                    <img src="~/images/updown4.png" class="updown">&nbsp;&nbsp; Fan sweep dimension(in)
                    <div class="whole_container">
                        <div class="container">
                            <div class="min-value numberVal4">
                                <input type="number" min="0" max="100" value="25" disabled>
                            </div>
                            &nbsp;
                            <div class="range-slider4">
                                <div class="progress"></div>
                                <input type="range" class="range-min" min="0" max="100" value="25">
                                <input type="range" class="range-max" min="0" max="100" value="75">
                            </div>
                            &nbsp;
                            <div class="max-value numberVal4">
                                <input type="number" min="0" max="100" value="75" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <script src="script.js"></script>
            </div>
        </div>
    </div>
    <div class="right">
        <a href="../tblProducts/Index">Mechanical</a> <!-- Not sure if we're going to have a mechanical page -->
        <text style="color:steelblue"> > </text>
        <a href="../tblProducts/Index"> HVAC Fans</a> <!-- Link this to Product Details page when it is completed -->
        <text style="color:steelblue"> > </text>
        @*<h3 id="item_name">HVAC Fans</h3>*@
        <div class=" items">
        @if (list1.Count() == 0)
        {
            <p>No match!</p>
        }
        else
        {


            foreach (var item in list1)
            {
                <div class="item">
                    @Html.ActionLink("Details", "Details", new { id = item.Product_ID })
                    <img class="fans" src="@item.Product_Image" alt="fans-image" />
                    <div class="information">
                        <p>@item.Product_Name</p>
                        <p>@item.Series</p>
                        <p>@item.Model</p>
                    </div>
                    <div class="features">
                        <p>@item.Air_Flow CFM</p>
                        <p>@item.Power_Max W at max speed</p>
                        <p>@item.Sound_At_Max_Speed dBA at max speed</p>
                        <p>@item.Fan_Sweep_Diameter fan sweep diameter</p>
                    </div>
                    <div class="item-footer">
                        @*<div class="compare"><input type="checkbox">Compare</div>*@
                        @*<input id="@item.Series" type="checkbox" onclick="addToCompare(this.id); sendData()">*@
                        <div><input id="@item.Series" type="checkbox" onclick="addToCompare(this.id); sendData()">Compare</div>

                        <button class="add">Add to</button>
                    </div>


                    <script type="text/javascript">
                        var comparelist = [];
                        sessionStorage.setItem("selections", []);

                        function addToCompare(iD) {
                            var checkBox = document.getElementById(iD);
                            var text = document.getElementById("text");

                            if (checkBox.checked == true) {
                                comparelist.push(iD);
                            } else {
                                comparelist.splice(comparelist.indexOf(iD), 1);
                            }
                            sessionStorage.setItem("selections", comparelist);
                        }

                        function sendData() {
                            //var sepID = sessionStorage.getItem("selections").toString();
                            var sepID = sessionStorage.getItem("selections")
                            //var sepID = compareList.toString()
                            $.ajax({
                                url: "sendData",
                                type: "POST",
                                data: { ItemList: sepID },
                                success: function (response) { }
                            });
                            //console.log("yes")
                        }
                    </script>
                </div>
            }
        }
            <div style="clear: both;"></div>
        </div>
    </div>
    <div class="comparebutton" style="position: absolute; top: 700px; left: 1065px">
        <!--Button that links to the compare page-->
        <form action="../tblProducts/Compare">
            <input type="submit" value="Compare" />
        </form>
    </div>
</div>

